events {}

http{
upstream appserver {
    server 	http://hello-world-nginx-secapi.13.81.11.55.nip.io/;
}

server {
    listen 4433 ssl;

    # mTLS block for WoTT
    if ($ssl_client_verify != "SUCCESS") { return 403; }
    ssl_client_certificate cert/ca.crt;
    ssl_verify_depth 2;
    ssl_verify_client on;

    # This can be a Let's Encrypt certificate
    ssl_certificate     cert/client-ssl.bauland42.com.crt;
    ssl_certificate_key cert/client-sclient-ssl.bauland42.com.key;

    location / {
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header SSL_Client $ssl_client_s_dn;
        proxy_set_header SSL_Client_Verify $ssl_client_verify;
        proxy_pass 	http://hello-world-nginx-secapi.13.81.11.55.nip.io/;
    }
}



}
